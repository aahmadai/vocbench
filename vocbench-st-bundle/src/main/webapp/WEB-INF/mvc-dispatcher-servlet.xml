	<context:component-scan base-package="org.fao.aims.aos.vocbench.services" />
	
	<bean id="vocbenchService" class="org.fao.aims.aos.vocbench.services.VOCBENCH" />
	
	<osgi:service ref="vocbenchService" interface="it.uniroma2.art.semanticturkey.plugin.extpts.ServiceInterface" />

	<bean id="agrovocService" class="org.fao.aims.aos.vocbench.services.Agrovoc" />
	
	<osgi:service ref="agrovocService" interface="it.uniroma2.art.semanticturkey.plugin.extpts.ServiceInterface" />


	<bean id="validator"
		class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

	<bean
		class="org.springframework.validation.beanvalidation.MethodValidationPostProcessor">
		<property name="proxyTargetClass" value="true"></property>
	</bean>

